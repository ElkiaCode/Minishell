#include "libft.h"

int	is_sep(char c, char *charset)
{
	int	i;

	i = 0;
	while (charset[i])
	{
		if (c == charset[i] || c == '\0)
			return (1);
		i++;
	}
	return (0);
}

size_t	ft_countwords(char *str, char *sep)
{
	size_t	i;
	size_t	count;

	i = 0;
	count = 0;
	while (str[i])
	{
		if (is_sep(str[i + 1], sep) == 1 && is_sep(str[i], sep) == 0)
			count++;
		i++;
	}
	return (count);
}

void free_tab(char **tab)
{
	size_t i;

	i = 0;
	while (tab[i])
		free(tab[i++]);
	free(tab);
}

void	make_split(char **strs, char *str, char *charset)
{
	int		i;
	int		j;
	int		word;

	word = 0;
	i = 0;
	while (str[i] != '\0')
	{
		if (is_sep(str[i], charset) == 1)
			i++;
		else
		{
			j = 0;
			while (is_sep(str[i + j], charset) == 0)
				j++;
			strs[word] = malloc(sizeof(char) * (j + 1));
			if (!strs[word])
				free_tab(strs);
			if (!strs[word])
				return ;
			ft_strncpy(strs[word], &str[i], j + 1);
			i += j;
			word++;
		}
	}
}

char	**ft_split(char *str, char *charset)
{
	char	**strs;
	size_t size;

	size = ft_countwords(str, charset);
	strs = malloc(sizeof(char *) * (size + 1));
	if (!strs)
		return (NULL);
	strs[size] = 0;
	make_split(strs, str, charset);
	return (strs);
}
